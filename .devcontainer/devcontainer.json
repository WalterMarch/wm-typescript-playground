{
	"name": "wm-typescript-playground",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
	},
	// https://stackoverflow.com/a/67803226/21655737
	"mounts": [
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind"
	],
	"postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/configit.sh ${containerWorkspaceFolder}",
	"customizations": {
		"vscode": {
			"settings" : {"editor.rulers": [72, 79],
			"editor.trimAutoWhitespace": true,
			"files.autoSave": "off"
		},
			"extensions": [
				"DavidAnson.vscode-markdownlint",
				"mathematic.vscode-pdf",
				"mechatroner.rainbow-csv",
				"ms-azuretools.vscode-docker",
				"streetsidesoftware.code-spell-checker",
				"dbaeumer.vscode-eslint",
				"VisualStudioExptTeam.vscodeintellicode-completions"
			]
		}
	}
}